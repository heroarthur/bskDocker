int8_t l_8;
    uint32_t l_32;
    uint64_t l_64;

    Datagram test = Datagram();
    test.clear_datagram();

    test.pack_next_int8_bit_value_buffer(-34);
    test.pack_next_uint32_bit_value_buffer(443);
    test.pack_next_uint64_bit_value_buffer(33);

    test.get_int8_bit_value_fbuffer(l_8, 0);
    test.get_int32_bit_value_fbuffer(l_32, 1);
    test.get_int64_bit_value_fbuffer(l_64, 5);
